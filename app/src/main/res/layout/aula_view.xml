<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:descendantFocusability="blocksDescendants">


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

        <LinearLayout
            android:id="@+id/background_lesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundlesson"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/app_android_class_icon" />

            <TextView
                android:id="@+id/textViewTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teacher"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/textViewAulaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:text="@string/nombre_clase"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            </HorizontalScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>