<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:elevation="10dp">


            <ImageView
                android:id="@+id/img_class"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:padding="16dp"
                android:background="@drawable/backgroundlesson"
                android:scaleType="fitXY"
                android:src="@drawable/app_android_class_icon" />


        </android.support.v7.widget.CardView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textViewAulaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewTeacher"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:text="@string/nombre_clase"
                android:textAppearance="?android:attr/textAppearanceLarge" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profesor"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/app_android_general_avatar_profesor_noimage_male"/>
                <TextView
                    android:id="@+id/textViewTeacher"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="8dp"
                    android:text="Teacher"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_hand_rice"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/rise_hand_selector" />

                <ImageButton
                    android:id="@+id/btn_hand_down"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/down_hand_selector"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/text_hand"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="@string/raice_hand_title"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_margin="16dp"
        android:id="@+id/tx_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="kjaskjsaflkjfsfjoksdgfoksjoksdokdsfokvokdv"
        />
</LinearLayout>