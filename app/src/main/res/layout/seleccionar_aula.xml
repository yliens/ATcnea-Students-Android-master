<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <GridView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:id="@+id/gridViewAulas"
            android:layout_gravity="center_horizontal"
            android:numColumns="5"
            tools:listitem="@layout/aula_view"
            />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnServerScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sync_black_24dp"
            app:rippleColor="@color/colorPrimary"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            app:borderWidth="0dp"
            android:layout_alignBottom="@+id/gridViewAulas"
            android:layout_alignRight="@+id/gridViewAulas"
            android:layout_alignEnd="@+id/gridViewAulas" />
    </RelativeLayout>




